<!-- modal for Edit Profile -->
<div class="modal fade" id="editProfileModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Edit Profile</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<%= form_for :user, url: users_path do |f| %>
					    <%= f.text_field :first_name, value: @current_user[:first_name] %> <br>
					    <%= f.text_field :last_name, value: @current_user[:last_name] %><br>
					    <%= f.email_field :email, value: @current_user[:email] %><br>
					    <%= f.collection_select(:city_id, City.all, :id, :name ) %><br>
					    <%= f.submit "Update Profile" %>
					<% end %>
				</div>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->