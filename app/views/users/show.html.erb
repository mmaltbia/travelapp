<div class="profile-background">
	<button id="profile-post">Create New Post
			</button>
	<div id="profile">
		<div id="profile2">
			<img id="profile-image" src="https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/6/005/08b/0a4/1e476e9.jpg" alt="Daniel Kahn">
			</div>
			<div id="edit-pencil" class="glyphicon glyphicon-pencil">
			</div>
			<p class="profile-text"><%= @current_user.first_name.capitalize %> <%= @current_user.last_name.capitalize %></p>
		<p class="profile-text"><%= @current_user.created_at.strftime("%B, %d, %Y") %></p>
		<p id="city"><%= @current_user.current_city %></p>
			<button id="profile-edit" class="button-primary">Edit Profile
			</button>
	</div>
</div>

<div class="container-fluid">
	<div class="row">

<% @posts.each do |post| %>
	<div class="col-sm-3"><%= post.image</div>
	<div class="col-sm-9"><h2><%= post.title %></h2></div>
	<div class="col-sm-9"><p><%= post.body %></p></div>
<% end %>


</div>
